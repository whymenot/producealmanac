<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
<LinearLayout 
    android:id="@+id/master"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="@color/OffGrey"
    android:orientation="vertical" >

    
    
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_all_stores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="@android:color/white"
        android:gravity="left|center" >

    <CheckBox
        android:id="@+id/buttonAllStores"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        
        android:textSize="@dimen/button_font"
        android:text="All Stores" />    
    </LinearLayout>

        <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_berkeley_bowl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="@android:color/white"
        android:gravity="left|center" >

    <CheckBox
        android:id="@+id/buttonBerkeleyBowl"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:textSize="@dimen/button_font"
        android:text="Berkeley Bowl" />    
    </LinearLayout>

        <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_yasai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="@android:color/white"
        android:gravity="left|center" >

    <CheckBox
        android:id="@+id/buttonYasai"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:textSize="@dimen/button_font"
        android:text="Yasai" />    
    </LinearLayout>

        <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_trader_joes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="@android:color/white"
        android:gravity="left|center" >

    <CheckBox
        android:id="@+id/buttonTraderJoes"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:textSize="@dimen/button_font"
        android:text="Trader Joes" />    
    </LinearLayout>

        <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_safeway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="@android:color/white"
        android:gravity="left|center" >

    <CheckBox
        android:id="@+id/buttonSafeway"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:textSize="@dimen/button_font"
        android:text="Safeway" />    
    </LinearLayout>


</LinearLayout>

</ScrollView>